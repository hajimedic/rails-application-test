<%# ログイン画面 %>
<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ログイン</title>
    <%= csrf_meta_tags %>
    <style>
      body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, "Hiragino Kaku Gothic ProN", "Yu Gothic UI", "Noto Sans JP", Arial, "Apple Color Emoji", "Segoe UI Emoji"; background: #f6f7f9; margin: 0; }
      .container { max-width: 420px; margin: 10vh auto; background: #fff; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.06); padding: 28px; }
      h1 { font-size: 22px; margin: 0 0 16px; }
      form { display: grid; gap: 14px; }
      label { font-size: 13px; color: #333; }
      input[type="text"], input[type="password"] { width: 100%; box-sizing: border-box; padding: 10px 12px; border: 1px solid #dcdfe4; border-radius: 8px; font-size: 16px; }
      input:focus { outline: none; border-color: #4f46e5; box-shadow: 0 0 0 3px rgba(79,70,229,0.12); }
      .btn { background: #4f46e5; color: #fff; border: none; padding: 10px 14px; border-radius: 8px; font-size: 16px; cursor: pointer; }
      .btn:hover { background: #4338ca; }
      .alert { background: #fde8e8; color: #b91c1c; padding: 10px 12px; border-radius: 8px; border: 1px solid #f8c7c7; margin-bottom: 10px; }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>ログイン</h1>
      <% if flash[:alert].present? %>
        <div class="alert"><%= flash[:alert] %></div>
      <% end %>
      <%= form_with url: login_path, method: :post, local: true do |f| %>
        <div>
          <label for="user_id">ユーザーID</label>
          <%= text_field_tag :user_id, params[:user_id], required: false, autofocus: true %>
        </div>
        <div>
          <label for="password">パスワード</label>
          <%= password_field_tag :password, nil, required: false %>
        </div>
        <div>
          <button class="btn" type="submit">ログイン</button>
        </div>
      <% end %>
    </div>
  </body>
</html>
